<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div id="registration">
  <p>All fields are required</p>
  <form id="register-form" action="/account/register" method="post">
    <label for="account_firstname">First Name: </label>
    <input type="text" name="account_firstname" id="account_firstname" required>
    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="account_lastname" required>
    <label for="account_email">Email: </label>
    <input type="email" name="account_email" id="account_email" required>
    <label for="account_password">Password: </label>
    <input type="text" name="account_password" id="account_password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+{}\[\]:;<>,.?~\\-]).{12,}$" required>
    <span>Password must contain at least 1 capital letter, 1 numbe, 1 special character, 12 characters in lenght</span>
    <input type="submit" value="Submit"> 
  </form>
</div>
