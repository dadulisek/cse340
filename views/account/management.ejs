<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<h2>Welcome <%= accountData.account_firstname %></h2>

<p>
  <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
</p>

<% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv">Go to Inventory Management</a>
  </p>
<% } %>

<h3>Leave a Message</h3>
<form method="POST" action="/account/message">
  <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
  <textarea name="message_text" required></textarea>
  <button type="submit">Send</button>
</form>
<a href="/account/messages">Messages Sent by You</a>