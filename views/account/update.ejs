<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

  <!-- ✅ Account Info Update Form -->
  <section>
    <h2>Update Account Information</h2>
    <form method="post" action="/account/update-info">

      <!-- Hidden ID Field -->
      <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

      <label for="account_firstname">First Name</label>
      <input type="text" id="account_firstname" name="account_firstname" 
        required 
        value="<%= typeof account_firstname !== 'undefined' ? account_firstname : accountData.account_firstname %>" 
      >

      <label for="account_lastname">Last Name</label>
      <input type="text" id="account_lastname" name="account_lastname" 
        required 
        value="<%= typeof account_lastname !== 'undefined' ? account_lastname : accountData.account_lastname %>" 
      >

      <label for="account_email">Email</label>
      <input type="email" id="account_email" name="account_email" 
        required 
        value="<%= typeof account_email !== 'undefined' ? account_email : accountData.account_email %>" 
      >

      <input type="submit" value="Update Account Info">
    </form>
  </section>

  <!-- ✅ Password Change Form -->
  <section>
    <h2>Change Password</h2>
    <p>Enter a new password below to change your current one. Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.</p>

    <form method="post" action="/account/update-password">
      
      <!-- Hidden ID Field -->
      <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

      <label for="new_password">New Password</label>
      <input type="password" id="new_password" name="new_password"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        title="Password must be at least 12 characters long and include at least 1 number, 1 uppercase letter, and 1 special character."
      >

      <input type="submit" value="Change Password">
    </form>
  </section>