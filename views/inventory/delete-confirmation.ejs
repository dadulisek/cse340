<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<p>Confirm Deletion - The delete is permanent.</p>
<form class="add-inventory" action="/inv/delete" method="post">
  <label for="inv_make">Make: </label>
  <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" readonly>
  <label for="inv_model">Model: </label>
  <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" readonly>
  <label for="inv_year">Year: </label>
  <input type="number" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>" readonly>
  <label for="inv_price">Price: </label>
  <input type="number" name="inv_price" id="inv_price" required value="<%= locals.inv_price %>" readonly>
  <input type="submit" name="submit" value="Delete">
  <input type="hidden" name="inv_id"
  <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
  <% } %>>
</form>